<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector_background"
    android:paddingBottom="5dip"
    android:paddingLeft="5dip"
    android:paddingRight="10dip"
    android:paddingTop="5dip" >

    <TextView
        android:id="@+id/tv_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/iv_ficon"
        android:textColor="#ff000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_fsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fname"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/iv_ficon"
        android:textColor="#ff080808"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_fdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_fname"
        android:textColor="#ff080808"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_ficon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="64dip"
        android:maxWidth="64dip"
        android:scaleType="center"
        android:src="@drawable/folder" />


</RelativeLayout>